<?php
/**
 * Database Configuration
 * 
 * IMPORTANT: Copy this file to database.php and update these credentials for your environment
 * For XAMPP, default MySQL credentials are usually:
 * - Host: localhost
 * - Username: root
 * - Password: (empty)
 * - Database: information_db (create this first)
 */

define('DB_HOST', 'localhost');
define('DB_USER', 'root');
define('DB_PASS', '');
define('DB_NAME', 'information_db');

/**
 * Create database connection using PDO with prepared statements
 * This prevents SQL injection attacks
 */
function getDBConnection() {
    try {
        $dsn = "mysql:host=" . DB_HOST . ";dbname=" . DB_NAME . ";charset=utf8mb4";
        $options = [
            PDO::ATTR_ERRMODE            => PDO::ERRMODE_EXCEPTION,
            PDO::ATTR_DEFAULT_FETCH_MODE  => PDO::FETCH_ASSOC,
            PDO::ATTR_EMULATE_PREPARES   => false,
            PDO::MYSQL_ATTR_INIT_COMMAND => "SET NAMES utf8mb4"
        ];
        
        $pdo = new PDO($dsn, DB_USER, DB_PASS, $options);
        return $pdo;
    } catch (PDOException $e) {
        // Log error but don't expose details to users
        error_log("Database connection failed: " . $e->getMessage());
        die("Database connection error. Please contact the administrator.");
    }
}

/**
 * Test database connection
 */
function testDBConnection() {
    try {
        $pdo = getDBConnection();
        return true;
    } catch (Exception $e) {
        return false;
    }
}
?>
